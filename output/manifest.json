{
    "manifest_version": 2,
    "name": "Obscrawler",
    "version": "1.0",
    "background": {
        "persistent": true,
        "scripts": [
            "defaults.js",
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "browser_action": {
        "default_title": "Obscrawler"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
